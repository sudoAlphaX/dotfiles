function ytdl() {
  local link=""

  if [ -n "$1" ] && [ -f "$1" ]; then
    link="$1"
    shift
  else
    echo "Refusing to download. No link or file provided." >&2
  fi
    return 1

  yt-dlp "$link" "$@"
}

