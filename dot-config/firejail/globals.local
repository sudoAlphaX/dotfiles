# Do not join the same sandbox (multi-user fix)
ignore join-or-start

# Blacklist sensitive directories
blacklist ${HOME}/Documents/Keepass
blacklist ${HOME}/Documents/Keefile
blacklist ${HOME}/Documents/ID
blacklist ${HOME}/Documents/Private

# Allow access to user tmp directory
read-write ${HOME}/tmp

read-only ${HOME}/.local/bin
read-only ${HOME}/.local/share/applications
